@model ContactPage
<div class="content-body">
    <div class="row">

        <div class="card col-10 mx-auto">
            <div class="card-header my-3">
                <h4 class="card-title">Global Settings</h4>
            </div>
            <div class="card-body ">
                <div class="basic-form">
                    <form enctype="multipart/form-data" method="post" asp-controller="Pages" asp-action="SaveContact">
                        <div class="form-group row my-2">
                            <label class="col-sm-2 col-form-label">Logo</label>
                            <div class="col-sm-10">
                                <input asp-for="pageFile" class="form-control my-2" value="@Model.pageImg">
                                <img src="~/img/@Model.pageImg" style="object-fit:cover;width:60px; height:60px;" accept="image/*">
                            </div>
                        </div>
                        <div class="form-group row my-2">
                            <label class="col-sm-2 col-form-label">Title</label>
                            <div class="col-sm-10">
                                <input asp-for="pageTitle" class="form-control" placeholder="Location" value="@Model.pageTitle">
                            </div>
                        </div>
                        <div class="form-group row my-2">
                            <label class="col-sm-2 col-form-label">Intro</label>
                            <div class="col-sm-10">
                                <input asp-for="pageIntro" class="form-control" placeholder="Location" value="@Model.pageIntro">
                            </div>
                        </div>
                        <div class="form-group row my-2">
                            <label class="col-sm-2 col-form-label">Location</label>
                            <div class="col-sm-10">
                                <input asp-for="location" class="form-control" placeholder="Location" value="@Model.location">
                            </div>
                        </div>
                        <div class="form-group row my-2">
                            <label class="col-sm-2 col-form-label">Phone</label>
                            <div class="col-sm-10">
                                <input asp-for="phone" class="form-control" placeholder="Phone" value="@Model.phone">
                            </div>
                        </div>
                        <div class="form-group row my-2">
                            <label class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-10">
                                <input asp-for="email" class="form-control" placeholder="Email" value="@Model.email">
                            </div>
                        </div>
                        <div class="form-group row my-2">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
