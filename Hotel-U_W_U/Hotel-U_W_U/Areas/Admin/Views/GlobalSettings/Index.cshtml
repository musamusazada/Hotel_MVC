@model Setting
<div class="content-body">
    <div class="row">

        <div class="card col-10 mx-auto">
            <div class="card-header my-3">
                <h4 class="card-title">Global Settings</h4>
            </div>
            <div class="card-body ">
                <div class="basic-form">
                    <form enctype="multipart/form-data" method="post"  asp-controller="GlobalSettings" asp-action="Update"  >
                        <div class="form-group row my-2">
                            <label class="col-sm-2 col-form-label">Logo</label>
                            <div class="col-sm-10">
                                <input asp-for="logoFile" class="form-control my-2" value="@Model.logoImg">
                                <img src="~/img/@Model.logoImg" style="object-fit:cover;width:60px; height:60px;" accept="image/*" >
                            </div>
                        </div>
                        <div class="form-group row my-2">
                            <label class="col-sm-2 col-form-label">Location</label>
                            <div class="col-sm-10">
                                <input asp-for="location" class="form-control" placeholder="Location" value="@Model.location">
                            </div>
                        </div>
                        <div class="form-group row my-2">
                            <label class="col-sm-2 col-form-label">Reception Phone Number</label>
                            <div class="col-sm-10">
                                <input asp-for="receptionPhone" class="form-control" placeholder="Reception Phone Number" value="@Model.receptionPhone">
                            </div>
                        </div>
                        <div class="form-group row my-2">
                            <label class="col-sm-2 col-form-label">Shuffle Service Phone</label>
                            <div class="col-sm-10">
                                <input asp-for="shuffleServicePhone" class="form-control" placeholder="Shuffle Service Phone" value="@Model.shuffleServicePhone">
                            </div>
                        </div>
                        <div class="form-group row my-2">
                            <label class="col-sm-2 col-form-label">Restaurant Phone</label>
                            <div class="col-sm-10">
                                <input asp-for="restaurantPhone" class="form-control" placeholder="Restaurant Phone" value="@Model.restaurantPhone">
                            </div>
                        </div>
                        <div class="form-group row my-2">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
