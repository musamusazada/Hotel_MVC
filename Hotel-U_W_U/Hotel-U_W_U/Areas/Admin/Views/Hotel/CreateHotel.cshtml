@model Hotel
<div class="content-body">
    <div class="row">

        <div class="card col-10 mx-auto">
            <div class="card-header my-3">
                <h4 class="card-title">Hotel creation</h4>
            </div>
            <div class="card-body ">
                <div class="basic-form">
                    <form enctype="multipart/form-data" method="post" asp-area="Admin" asp-controller="Hotel" asp-action="CreateHotel">
                        <div class="form-group row my-2">
                            <label class="col-sm-2 col-form-label">Logo</label>
                            <div class="col-sm-10">
                                <input asp-for="file" class="form-control my-2">
                                <span asp-validation-for='file' class="text-danger error--message"></span>
                            </div>
                        </div>
                        <div class="form-group row my-2">
                            <label class="col-sm-2 col-form-label">Name</label>
                            <div class="col-sm-10">
                                <input asp-for="name" class="form-control" placeholder="Name">
                                <span asp-validation-for='name' class="text-danger error--message"></span>
                            </div>
                        </div>
                        <div class="form-group row my-2">
                            <label class="col-sm-2 col-form-label">Description</label>
                            <div class="col-sm-10">
                                <input asp-for="desc" class="form-control" placeholder="Desc">
                                <span asp-validation-for='desc' class="text-danger error--message"></span>

                            </div>
                        </div>
                        <div class="form-group row my-2">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Create</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
