@using Hotel_U_W_U.Areas.Admin.ViewModels
@model List<UserViewModel>

<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Users</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="thead-primary">
                                    <tr>
                                        <th scope="col">#ID</th>
                                        <th scope="col">Username</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Roles</th>
                                        <th scope="col">Operations</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <form method="post">
                                        <tr>
                                            <th>@user.id</th>
                                            <td>@user.username</td>
                                            <td>@user.email</td>
                                            <td>@user.Role</td>
                                            <td class="d-flex flex-column">
                                                <button type="submit" class="btn btn-primary my-2" asp-area="Admin" asp-controller="Account" asp-action="MakeAdmin" asp-route-id="@user.id">Make ADM</button>
                                                <button type="submit" class="btn btn-primary my-2" asp-area="Admin" asp-controller="Account" asp-action="MakeHotel" asp-route-id="@user.id">Make Hotel</button>
                                                <button type="submit" class="btn btn-danger my-2" asp-area="Admin" asp-controller="Account" asp-action="Ban" asp-route-id="@user.id">Ban</button>
                                                <button type="submit" class="btn btn-warning my-2" asp-area="Admin" asp-controller="Account" asp-action="Unlock" asp-route-id="@user.id">Unlock</button>
                                            </td>
                                        </tr>
                                        </form>


                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>