@model Service
<div class="content-body">
    <div class="row mx-auto">
        <div class="card col-10 mx-auto">
            <form enctype="multipart/form-data" method="post" asp-controller="ServiceCRUD" asp-action="Edit" asp-route-id="@Model.id">
                <div class="form-group row my-2">
                    <label class="col-sm-2 col-form-label">Image</label>
                    <div class="col-sm-10">
                        <input asp-for="file" class="form-control my-2" value="@Model.img">
                        <img src="~/img/@Model.img" style="object-fit:cover;width:60px; height:60px;" accept="image/*">
                    </div>
                </div>
                <div class="form-group row my-2">
                    <label class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input asp-for="@Model.name" class="form-control" placeholder="Name" value="@Model.name">
                    </div>
                </div>
                <div class="form-group row my-2">
                    <label class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-10">
                        <input asp-for="@Model.description" class="form-control" placeholder="Description" value="@Model.description">
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>