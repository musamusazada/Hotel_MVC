@using Hotel_U_W_U.Constants
<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Focus - Bootstrap Admin Dashboard </title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="./images/favicon.png">
    <link href="~/Admin/vendor/pg-calendar/css/pignose.calendar.min.css" rel="stylesheet">
    <link href="~/Admin/vendor/chartist/css/chartist.min.css" rel="stylesheet">
    <link href="~/Admin/css/style.css" rel="stylesheet">

</head>

<body>

    <div id="main-wrapper">


        <!--*******************
            Preloader start
        ********************-->
        <div id="preloader">
            <div class="sk-three-bounce">
                <div class="sk-child sk-bounce1"></div>
                <div class="sk-child sk-bounce2"></div>
                <div class="sk-child sk-bounce3"></div>
            </div>
        </div>
        <!--*******************
            Preloader end
        ********************-->
        <!--**********************************
            Main wrapper start
        ***********************************-->
        <!--**********************************
            Nav header start
        ***********************************-->
        <div class="nav-header">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="brand-logo">
                <img class="logo-abbr" src="./images/logo.png" alt="">
                <img class="logo-compact" src="./images/logo-text.png" alt="">
                <img class="brand-title" src="./images/logo-text.png" alt="">
            </a>

            <div class="nav-control">
                <div class="hamburger">
                    <span class="line"></span><span class="line"></span><span class="line"></span>
                </div>
            </div>
        </div>
        <!--**********************************
            Nav header end
        ***********************************-->
        <!--**********************************
            Header start
        ***********************************-->
        <div class="header">
            <div class="header-content">
                <nav class="navbar navbar-expand">
                    <div class="collapse navbar-collapse justify-content-between">
                        <div class="header-left">
                        </div>

                        <ul class="navbar-nav header-right">

                            <li class="nav-item dropdown header-profile">
                                <a class="nav-link" href="#" role="button" data-toggle="dropdown">
                                    <i class="mdi mdi-account"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a href="./app-profile.html" class="dropdown-item">
                                        <i class="icon-user"></i>
                                        <span class="ml-2">Profile </span>
                                    </a>
                                    <a asp-area="Default" asp-controller="Account" asp-action="Logout" class="dropdown-item">
                                        <i class="icon-key"></i>
                                        <span class="ml-2">Logout </span>
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->
        <!--**********************************
            Sidebar start
        ***********************************-->
        <div class="quixnav">
            <div class="quixnav-scroll">
                <ul class="metismenu" id="menu">
                    <li class="nav-label first">Main Menu</li>
                    <!-- <li><a href="index.html"><i class="icon icon-single-04"></i><span class="nav-text">Dashboard</span></a>
                    </li> -->
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" aria-expanded="false">
                            <span class="nav-text">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Profile" aria-expanded="false">
                            <span class="nav-text">Profile</span>
                        </a>
                    </li>
                    @if (!User.IsInRole(RoleConstants.Hotel))
                    {
                        <li class="nav-label">Pages</li>
                        <li>
                            <a aria-expanded="false" class="has-arrow">
                                <i class="icon icon-app-store"></i><span class="nav-text">Pages</span>
                            </a>
                            <ul aria-expanded="false">
                                <li><a asp-area="Admin" asp-controller="Pages" asp-action="Home">Home</a></li>
                                <li><a asp-area="Admin" asp-controller="Pages" asp-action="About">About</a></li>
                                <li><a asp-area="Admin" asp-controller="Pages" asp-action="Hotels">Hotels</a></li>
                                <li><a asp-area="Admin" asp-controller="Pages" asp-action="Rooms">Rooms</a></li>
                                <li><a asp-area="Admin" asp-controller="Pages" asp-action="Service">Services</a></li>
                                <li><a asp-area="Admin" asp-controller="Pages" asp-action="Contact">Contact</a></li>
                            </ul>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="GlobalSettings" asp-action="Index">
                                <i class="icon icon-world-2"></i><span class=" ms-2 nav-text">Global Settings</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="ServiceCRUD" asp-action="Index">
                                <i class="icon icon-world-2"></i><span class=" ms-2 nav-text">Services</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="Account" asp-action="Index">
                                <i class="icon icon-world-2"></i><span class=" ms-2 nav-text">Users</span>
                            </a>
                        </li>
                    }
                    <li>
                        <a asp-area="Admin" asp-controller="Hotel" asp-action="Index">
                            <i class="icon icon-world-2"></i><span class=" ms-2 nav-text">Hotel Profile</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <!--**********************************
            Sidebar end
        ***********************************-->
        <div>
            @RenderBody()
        </div>

        <div class="footer">
            <div class="copyright">
                <p>Copyright © Designed &amp; Developed by <a href="https://crackall.net/" target="_blank">CrackAll</a> 2021</p>
                <p>Distributed by <a href="https://themewagon.com/" target="_blank">Themewagon</a></p>
            </div>
        </div>
    </div>
    <!--**********************************
        Footer end
    ***********************************-->
    <!--**********************************
       Support ticket button start
    ***********************************-->
    <!--**********************************
       Support ticket button end
    ***********************************-->
    <!--**********************************
        Main wrapper end
    ***********************************-->
    <!--**********************************
        Scripts
    ***********************************-->
    <!-- Required vendors -->
    <script src="~/Admin/vendor/global/global.min.js"></script>
    <script src="~/Admin/js/quixnav-init.js"></script>
    <script src="~/Admin/js/custom.min.js"></script>

    <script src="~/Admin/vendor/chartist/js/chartist.min.js"></script>

    <script src="~/Admin/vendor/moment/moment.min.js"></script>
    <script src="~/Admin/vendor/pg-calendar/js/pignose.calendar.min.js"></script>


    <script src="~/Admin/js/dashboard/dashboard-2.js"></script>
    <!-- Circle progress -->

</body>

</html>
