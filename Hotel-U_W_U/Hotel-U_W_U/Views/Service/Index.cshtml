 @model ServicePage
<!-- banner -->
<section class="hotel-banner-simple services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <div class="hotel-center hotel-title-frame">
                    <h1 class="hotel-mb-20 hotel-h1-inner">@Model.pageTitle</h1>
                    <p class="hotel-mb-30">@Model.pageIntro</p>
                    <ul class="hotel-breadcrumbs">
                        <li><a asp-controller='Home'>Ana Səhifə</a></li>
                        <li><span>@Model.pageTitle</span></li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- banner end -->
<!-- services -->
<section class="hotel-p-0-80 service">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <div class="hotel-center hotel-title-frame hotel-scroll-animation hotel-mb-100">
                    <h2 class="hotel-mb-20">@Model.mainTitle</h2>
                    <p class="hotel-mb-30">@Model.mainText</p>
                </div>

            </div>
            @foreach (var service in Model.Services)
            {
                <div class="col-lg-4">

                    <!-- service card -->
                <div class="hotel-ath-card hotel-scroll-animation imgLoad">
                        <div class="hotel-cover-frame">
                            <img class="lozad" data-src="img/@service.img" alt="cover">
                        </div>
                        <div class="hotel-card-description">
                            <h3 class="hotel-mb-10">@service.name</h3>
                            <p>@service.description</p>
                        </div>
                    </div>
                    <!-- service card end -->

            </div>
            }


        </div>
    </div>
</section>
<!-- services end -->
